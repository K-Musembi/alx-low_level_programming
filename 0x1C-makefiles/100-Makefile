cc = gcc
CFLAGS := -Wall -Werror -Wextra -pedantic $(CFLAGS)
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
HEADER = m.h

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	@-rm -f *~ \

oclean:
	@-rm -f $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

$(OBJ): $(HEADER)
